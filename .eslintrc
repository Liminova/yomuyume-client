{
    "root": true,
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "@vue/typescript/recommended",
        "plugin:cadence/recommended",
        "plugin:tailwindcss/recommended"
    ],
    "plugins": [
        "cadence"
    ],
    "rules": {
        "import/named": "off",
        "tailwindcss/no-custom-classname": "off"
    }
}